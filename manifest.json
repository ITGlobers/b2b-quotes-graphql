{
  "vendor": "vtex",
  "name": "b2b-quotes-graphql",
  "version": "1.0.1",
  "title": "B2B Quotes GraphQL",
  "description": "Backend for the B2B Quotes & Carts app",
  "builders": {
    "graphql": "1.x",
    "node": "6.x",
    "docs": "0.x"
  },
  "dependencies": {
    "vtex.storefront-permissions": "1.x"
  },
  "registries": [
    "smartcheckout"
  ],
  "policies": [
    {
      "name": "read-workspace-apps"
    },
    {
      "name": "update-app-settings"
    },
    {
      "name": "SaveOrderFormConfiguration"
    },
    {
      "name": "POWER_USER_DS"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "vtex.storefront-permissions:resolve-graphql"
    },
    {
      "name": "vtex.graphql-server:resolve-graphql"
    },
    {
      "name": "Get_User_By_Identifier"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/checkout/pub/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/api/dataentities/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/checkout/pvt/configuration/orderForm"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/dataentities/cart/*"
      }
    }
  ],
  "settingsSchema": {
    "title": "B2B Quotes & Carts",
    "type": "object",
    "properties": {
      "hasSchema": {
        "type": "boolean",
        "default": false
      },
      "adminSetup": {
        "title": "B2B Quotes Settings",
        "type": "object",
        "properties": {
          "cartLifeSpan": {
            "title": "Default expiration date (in days) for quotes and saved carts",
            "type": "number",
            "minimum": 1
          },
          "storeLogoUrl": {
            "title": "Store logo URL",
            "type": "string"
          }
        },
        "required": [
          "cartLifeSpan",
          "storeLogoUrl"
        ]
      }
    },
    "required": [
      "adminSetup"
    ]
  },
  "settingsUiSchema": {
    "ui:order": [
      "adminSetup",
      "hasSchema"
    ],
    "adminSetup": {
      "ui:order": [
        "cartLifeSpan",
        "storeLogoUrl"
      ]
    },
    "hasSchema": {
      "ui:widget": "hidden"
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
